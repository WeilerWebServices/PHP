<refentry xml:id='function.fbsql-hostname' xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>fbsql_hostname</refname>
  <refpurpose>Lit ou définit le nom de l'hôte à utiliser avec une connexion</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>fbsql_hostname</methodname>
   <methodparam><type>resource</type><parameter>link_identifier</parameter></methodparam>
   <methodparam choice="opt"><type>string</type><parameter>host_name</parameter></methodparam>
  </methodsynopsis>
  <para>
   Lit ou définit le nom de l'hôte à utiliser avec une connexion.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    &fbsql.link-identifier.description;
    <varlistentry>
     <term><parameter>host_name</parameter></term>
     <listitem>
      <para>
       Si fourni, ce sera le nouveau nom de l'hôte à utiliser.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retourne le nom de l'hôte courant pour la connexion.
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>fbsql_username</function></member>
    <member><function>fbsql_password</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

