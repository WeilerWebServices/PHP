<refentry xml:id="reflectionclass.getdoccomment" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>ReflectionClass::getDocComment</refname>
  <refpurpose>Obtener los comentarios de documentación</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>string</type><methodname>ReflectionClass::getDocComment</methodname>
   <void />
  </methodsynopsis>
  <para>
   Obtiene los comentarios de documentación de una clase.
  </para>

  &warn.undocumented.func;

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Los comentarios de documentación, o &false; si no existiera.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Ejemplo de <methodname>ReflectionClass::getDocComment</methodname></title>
    <programlisting role="php">
<![CDATA[
<?php
/** 
* Clase de prueba
*
* @param  foo bar
* @return baz
*/
class ClaseDePrueba { }

$rc = new ReflectionClass('ClaseDePrueba');
var_dump($rc->getDocComment())
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
string(55) "/** 
* Clase de prueba
*
* @param  foo bar
* @return baz
*/"
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>ReflectionClass::getName</methodname></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

