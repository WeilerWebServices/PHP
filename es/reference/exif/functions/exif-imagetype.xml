 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Ejemplo de <function>exif_imagetype</function></title>
    <programlisting role="php">
<![CDATA[
<?php
if (exif_imagetype('imagen.gif') != IMAGETYPE_GIF) {
    echo 'La imagen no es gif';
}
?>
]]>  
    </programlisting>
   </example>
  </para>
 </refsect1>
