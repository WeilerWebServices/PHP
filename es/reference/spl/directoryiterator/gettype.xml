    <member><methodname>DirectoryIterator::isDot</methodname></member>
    <member><methodname>DirectoryIterator::isFile</methodname></member>
    <member><methodname>DirectoryIterator::isLink</methodname></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

