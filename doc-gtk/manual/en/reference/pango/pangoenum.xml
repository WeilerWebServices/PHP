  </desc>
  <enumoption>
   <value>1</value>
   <optionname>Pango::FONT_MASK_FAMILY</optionname>
   <shortdesc>
       The font family is specified.
   </shortdesc>
  </enumoption>
  <enumoption>
   <value>2</value>
   <optionname>Pango::FONT_MASK_STYLE</optionname>
   <shortdesc>
       The font style is specified.
   </shortdesc>
  </enumoption>
  <enumoption>
   <value>4</value>
   <optionname>Pango::FONT_MASK_VARIANT</optionname>
   <shortdesc>
       The font variant is specified.
   </shortdesc>
  </enumoption>
  <enumoption>
   <value>8</value>
   <optionname>Pango::FONT_MASK_WEIGHT</optionname>
   <shortdesc>
       The font weight is specified.
   </shortdesc>
  </enumoption>
  <enumoption>
   <value>16</value>
   <optionname>Pango::FONT_MASK_STRETCH</optionname>
   <shortdesc>
       The font stretch is specified.
   </shortdesc>
  </enumoption>
  <enumoption>
   <value>32</value>
   <optionname>Pango::FONT_MASK_SIZE</optionname>
   <shortdesc>
       The font size is specified.
   </shortdesc>
  </enumoption>
 </enum>


