<classentry id="gtk.gtktoggletoolbutton">
 <classmeta>
  <classtitle>GtkToggleToolButton</classtitle>
  <classparent>GtkToolButton</classparent>
  <shortdesc>
   A toolbar button that can be toggled on or off.
  </shortdesc>
  <desc>
   <para>
    A <classname>GtkToolItem</classname> containing a
    toggle button.
   </para>
  </desc>
 </classmeta>

 <constructors>
  <constructor id="gtk.gtktoggletoolbutton.constructor">
   <funcsynopsis>
    <funcprototype>
    <funcdef> <function>GtkToggleToolButton</function></funcdef>
    <paramdef>void</paramdef>
    </funcprototype>
   </funcsynopsis>
   <shortdesc>
    Creates a new toggle tool button.
   </shortdesc>
   <desc>
    <para>
     Creates a new toggle tool button.
    </para>
   </desc>
  </constructor>

  <constructor id="gtk.gtktoggletoolbutton.constructor.new_from_stock">
   <funcsynopsis>
    <funcprototype>
    <funcdef> <function>GtkToggleToolButton::new_from_stock</function></funcdef>
    <paramdef><enumname>GtkStockItems</enumname> <parameter>stock_id</parameter></paramdef>
    </funcprototype>
   </funcsynopsis>
   <shortdesc>
    Creates a new toggle tool button based on a stock item.
   </shortdesc>
   <desc>
    <para>
     Creates a new toggle tool button based on a stock item.
    </para>
   </desc>
  </constructor>
 </constructors>

 <methods>
  <method id="gtk.gtktoggletoolbutton.method.get_active">
   <funcsynopsis>
    <funcprototype>
     <funcdef>bool <function>get_active</function></funcdef>
     <paramdef>void</paramdef>
    </funcprototype>
   </funcsynopsis>
   <shortdesc>
    If the button is toggled active.
   </shortdesc>
   <desc>
    <para>
     If the button is toggled active.
    </para>
    <para>
     &seealso;
     <function class="GtkToggleToolButton">set_active</function>
    </para>
   </desc>
  </method>

  <method id="gtk.gtktoggletoolbutton.method.set_active">
   <funcsynopsis>
    <funcprototype>
     <funcdef>void <function>set_active</function></funcdef>
     <paramdef>bool <parameter>is_active</parameter></paramdef>
    </funcprototype>
   </funcsynopsis>
   <shortdesc>
    Sets the button to active state.
   </shortdesc>
   <desc>
    <para>
     Sets the button to active (selected) state.
    </para>
    <para>
     &seealso;
     <function class="GtkToggleToolButton">get_active</function>
    </para>
   </desc>
  </method>
 </methods>

 <signals>
  <signal id="gtk.gtktoggletoolbutton.signal.toggled">
   <signalname>toggled</signalname>
   <funcsynopsis>
    <funcprototype>
     <funcdef>void <cbfunction>callback</cbfunction></funcdef>
     <paramdef><classname>GtkToggleToolButton</classname> <parameter>toggletoolbutton</parameter></paramdef>
    </funcprototype>
   </funcsynopsis>
   <shortdesc>
    The state has been changed.
   </shortdesc>
   <desc>
    <para>
     Called when the active state of the button has been toggled.
    </para>
   </desc>
  </signal>

 </signals>

</classentry>
