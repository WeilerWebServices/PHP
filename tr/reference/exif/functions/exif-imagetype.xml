  <refsect1 role="examples">
   &reftitle.examples;
   <para>
    <example>
     <title>- <function>exif_imagetype</function> örneği</title>
     <programlisting role="php">
<![CDATA[
<?php
if (exif_imagetype('image.gif') != IMAGETYPE_GIF) {
    echo 'Bu bir GIF değil.';
}
?>
]]>
     </programlisting>
    </example>
   </para>
