<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.ssh2-scp-send">
 <refnamediv>
  <refname>ssh2_scp_send</refname>
  <refpurpose>SCP üzerinden bir dosya gönderir</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>ssh2_scp_send</methodname>
   <methodparam><type>resource</type><parameter>oturum</parameter></methodparam>
   <methodparam><type>string</type><parameter>yerel_dosya</parameter></methodparam>
   <methodparam><type>string</type><parameter>uzak_dosya</parameter></methodparam>
   <methodparam choice="opt"><type>int</type><parameter>kip</parameter><initializer>0644</initializer></methodparam>
  </methodsynopsis>
  <para>
   SCP protokolünü kullanarak bir yerel dosyayı uzak sunucunun dosya sistemine
   kopyalar.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>oturum</parameter></term>
     <listitem>
      <para>
       <function>ssh2_connect</function> ile sağlanan bir SSH bağlantı
       tanıtıcısı.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>yerel_dosya</parameter></term>
     <listitem>
      <para>
       Yerel dosyanın yolu.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>uzak_dosya</parameter></term>
     <listitem>
      <para>
       Uzak dosyanın yolu.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>kip</parameter></term>
     <listitem>
      <para>
       Dosya oluşturulurken atanacak erişim izinleri.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>- SCP üzerinden karşıya dosya yükleme</title>
    <programlisting role="php">
<![CDATA[
<?php
$baglanti = ssh2_connect('shell.example.com', 22);
ssh2_auth_password($baglanti, 'birey', 'parola');

ssh2_scp_send($baglanti, '/yerel/dosya', '/uzak/dosya', 0644);
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>ssh2_scp_recv</function></member>
    <member><function>copy</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

