<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.imagick-opaquepaintimage">
 <refnamediv>
  <refname>Imagick::opaquePaintImage</refname>
  <refpurpose>Hedef ile eşleşen piksellerin rengini değiştirir</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>Imagick::opaquePaintImage</methodname>
   <methodparam><type>mixed</type><parameter>hedef</parameter></methodparam>
   <methodparam><type>mixed</type><parameter>renk</parameter></methodparam>
   <methodparam><type>float</type><parameter>benzerlik</parameter></methodparam>
   <methodparam><type>bool</type><parameter>ters</parameter></methodparam>
   <methodparam choice="opt"><type>int</type><parameter>kanal</parameter><initializer>Imagick::CHANNEL_DEFAULT</initializer></methodparam>
  </methodsynopsis>

  <para>
   <parameter>hedef</parameter> ile eşleşen renkleri
   <parameter>renk</parameter> ile değiştirir.
   &imagick.method.available.0x638;
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>hedef</parameter></term>
     <listitem>
      <para>
       Değiştirilecek rengi içeren bir dizge veya bir
       <classname>ImagickPixel</classname> nesnesi.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>renk</parameter></term>
     <listitem>
      <para>
       Yeni renk.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>benzerlik</parameter></term>
     <listitem>
      <para>&imagick.parameter.fuzz;</para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>ters</parameter></term>
     <listitem>
      <para>
       &true; belirtilirse <parameter>hedef</parameter> renk ile eşleşmeyen
       renkteki piksellerin renkleri değiştirilir.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>kanal</parameter></term>
     <listitem>
      <para>
       &imagick.parameter.channel;
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>

 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &imagick.return.success;
  </para>
 </refsect1>

</refentry>

